{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "lib": ["es2020"],
    "outDir": "dist",

    "module": "commonjs",
    "target": "es2020",
    "declaration": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "documentation",
    "coverage",
    "dist",
    "src/examples",
    "src/__tests__"
  ]
}
